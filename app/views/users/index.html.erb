<div class="main users-index">
  <div class="container">
    <h1 class="users-heading">All users</h1>
    <%= will_paginate %>
    <% @users.each do |user| %>
      <div class="users-index-item">
        <div class="user-left">
          <% if user.image.attached? %>
            <%= image_tag user.image %>
          <% end %>
        </div>
        <div class="user-right">
          <%= link_to user.name, user %>
        </div>
      </div>
    <% end %>
    <%= will_paginate %>
  </div>
</div>