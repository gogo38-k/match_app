<div class="main users-edit">
  <div class="container">
    <div class="form-heading">Account edit</div>
      <div class="form users-form">
        <div class="form-body">
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <%= form_with(model: @user, local: true) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>

                <%= f.label :image %>
                <%= f.file_field :image %>

                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>

                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control' %>

                <div class="user_team">
                  <%= f.radio_button :team, :"Giants" %>
                  <%= f.label :team, "Giants", value: :"Giants", class: 'form-control' %>
                  <%= f.radio_button :team, :"Tigers" %>
                  <%= f.label :team, "Tigers", value: :"Tigers", class: 'form-control' %>
                  <%= f.radio_button :team, :"Dragons" %>
                  <%= f.label :team, "Dragons", value: :"Dragons", class: 'form-control' %>
                  <%= f.radio_button :team, :"BAYSTARS" %>
                  <%= f.label :team, "BAYSTARS", value: :"BAYSTARS", class: 'form-control' %>
                  <%= f.radio_button :team, :"Carp" %>
                  <%= f.label :team, "Carp", value: :"Carp", class: 'form-control' %>
                  <%= f.radio_button :team, :"Swallows" %>
                  <%= f.label :team, "Swallows", value: :"Swallows", class: 'form-control' %>
                  <%= f.radio_button :team, :"Hawks" %>
                  <%= f.label :team, "Hawks", value: :"Hawks", class: 'form-control' %>
                  <%= f.radio_button :team, :"Marines" %>
                  <%= f.label :team, "Marines", value: :"Marines", class: 'form-control' %>
                  <%= f.radio_button :team, :"Lions" %>
                  <%= f.label :team, "Lions", value: :"Lions", class: 'form-control' %>
                  <%= f.radio_button :team, :"Eagles" %>
                  <%= f.label :team, "Eagles", value: :"Eagles", class: 'form-control' %>
                  <%= f.radio_button :team, :"Fighters" %>
                  <%= f.label :team, "Fighters", value: :"Fighters", class: 'form-control' %>
                  <%= f.radio_button :team, :"Buffaloes" %>
                  <%= f.label :team, "Buffaloes", value: :"Buffaloes", class: 'form-control' %>
                </div>

                <%= f.label :profile %>
                <%= f.text_area :profile, class: 'form-control' %>

                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control' %>

                <%= f.label :password_confirmation, "Confirmation" %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
                  
                <%= f.submit "Save", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
