      <div class="main user-show">
        <div class="container">
          <section class="user">
            <% if @user.image.attached? %>
              <%= image_tag @user.image %>
            <% end %>
            <h1><%= @user.name %></h1>
            <p>Favorite Team</p>
            <h1><%= @user.team %></h1>
          </section>
          <section class="stats">
            <%= render 'shared/stats' %>
          </section>
          <% unless @user.id == current_user.id %>
            <% if (current_user.following? @user) && (@user.following? current_user)  %>
            <% if @isRoom == true %>
              <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-lg">チャットへ</a>
            <% else %>
              <%= form_for @room do |f| %>
                <%= fields_for @entry do |e| %>
                  <%= e.hidden_field :user_id, value: @user.id %>
                <% end %>
                <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
              <% end %>
            <% end %>
            <% end %>
          <% end %>
          <% if current_user.id == @user.id %>
            <%= link_to "Settings", edit_user_path(current_user) %>
          <% end %>
          <div class="row">
            <div class="col-sm-5">
              <p class='text-center'>-profile-</p>
              <% unless @user.profile.nil? %>
                <%= @user.profile.gsub(/\r\n|\r|\n/, "<br />").html_safe %>
              <% else %>
                <% if current_user.id == @user.id %>
                  <p>プロフィールを入力しませんか？</p>
                <% else %>
                  <p>プロフィールは未入力です</p>
                <% end %>
              <% end %>
            </div>
          </div>
          <%= render 'follow_form' if logged_in? %>
          <ul class="user-tabs">
            <li class="active"><%= link_to("Post", "/users/#{@user.id}") %></li>
            <li><%= link_to("Good", "/users/#{@user.id}/likes") %></li>
          </ul>

          <% @user.posts.each do |post| %>
            <div class="posts-index-item">
              <div class="post-left">
                <% if @user.image.attached? %>
                  <%= image_tag @user.image %>
                <% end %>
              </div>
              <div class="post-right">
                <div class="post-user-name">
                  <%= link_to(post.user.name, "/users/#{post.user.id}") %>
                </div>
                <%= link_to(post.content, "/posts/#{post.id}") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    